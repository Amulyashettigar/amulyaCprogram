#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int num, count;
    scanf("%d", &num);
    if(num== 1)
    {
        printf("%d\n", num);
    }
    else 
    {
        printf("%d\n", num);
        while(num!=1)
        {
        if(num%2==0)
        {
            num = num/2;
            count++;
            printf("%d\n", num);
        }
    else
    {
        num = 3*num + 1;
        count++;
        printf("%d\n", num);
    }
    }
    }
    printf("%d", count);
    return 0;
}
